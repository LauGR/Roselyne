<%- contentFor('contact') %>

    <div class="contact col-xs-12 col-sm-12 col-md-6 col-lg-6">

        <h1 class="text-center">Formulaire de contact</h1>

        <hr>

        <form action="/email" method="post">
            <div class="form-contact">
                <label for="name"> Nom</label>
                <input type="text" name="name" id="name" required placeholder="Entrez votre Nom">

                <label for="email"> Email</label>
                <input type="email" name="email" id="email" required placeholder="Entrez votre Mail">

                <label for="Subject"> Sujet</label>
                <input type="text" name="subject" id="subject" required placeholder="Entrez votre Sujet">

                <label for="message">Message</label>

                <textarea name="message" id="message" cols="20" rows="10" required placeholder="Entrez votre message"></textarea>

                <input type="submit" id="submit" value="Envoyez votre message">

            </div>
        </form>
    </div>